CREATE cached TABLE cropFields (cfid integer generated by default as identity primary key ,cropDetails varchar(250), fid integer, cid integer, foreign key (fid) references farmfield (fid) on delete cascade, foreign key (cid) references croptype(cid) on delete cascade, unique(cif,fid))
CREATE cached TABLE cropType (cid integer generated by default as identity primary key , cropName varchar(100), observations varchar(250))
CREATE cached TABLE farmfield (fid integer generated by default as identity primary key , fieldName varchar(100), area float, northBorder varchar(100), eastBorder varchar(100), southBorder varchar (100), westBorder varchar(100), observations varchar(255))
CREATE cached TABLE production (id integer generated by default as identity primary key ,quantity float, dateofharvest date, observations varchar(250), cfid integer, foreign key (cfid) references cropfields(cfid) on delete cascade)
CREATE cached TABLE applicationtype (apid integer generated by default as identity primary key , application varchar(100), observations varchar(250),unique(application))
CREATE cached TABLE applicationoncropfield (aocfid integer generated by default as identity primary key ,quantity float, dateofapplication date, expenses float ,observations varchar(250), cfid integer, apid integer, foreign key (cfid) references cropfields(cfid) on delete cascade, foreign key (apid) references applicationtype(apid) on delete cascade)
CREATE cached TABLE nutrienttype (nutid integer generated by default as identity primary key , nutname varchar(100),aweight float, nutsymbol varchar(20),observations varchar(200),unique(nutname))

CREATE cached TABLE frecipy (frid integer generated by default as identity primary key , cid integer, nutid integer ,quantity float,observations varchar(200),foreign key (cid) references cropType (cid) on delete cascade, foreign key (nutid) references nutrienttype (nutid) on delete cascade,unique(cid,nutid))

